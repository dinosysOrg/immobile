<%= javascript_include_tag "sunny-admin" %>
<div id="content" class="content">

  <!-- begin page-header -->
  <h1 class="page-header">Danh sách Dịch vụ
  </h1>


  <div class="input-group list-project-search">
    <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
    <input id="list-service-search-input" type="text" class="form-control" placeholder="Tìm kiếm theo tên, địa chỉ" value="<%= @search if @search.present? %>">
    <button type="button" class="btn btn-success" id="list-service-search-button">Tìm kiếm</button>
  </div>
  <!-- end page-header -->

  <!-- begin row -->
  <div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
      <!-- begin panel -->
      <div class="panel panel-inverse">

        <div class="panel-body">
          <div id="data-table_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

            <div class="row">
              <div class="col-sm-12">
                <table id="data-table" class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="data-table_info">
                  <thead>
                  <tr role="row">
                    <th id="sort-name" class="sorting" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1" style="width: 200px;">
                      <div style="display: inline-block; width: 95%;">Tên</div>
                      <i class="fa fa-sort" aria-hidden="true"></i>
                      </th>
                    <th id="sort-price" class="sorting" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1" style="width: 200px;">
                      <div style="display: inline-block; width: 95%;">Giá</div>
                      <i class="fa fa-sort" aria-hidden="true"></i>
                    </th>
                    <th class="sorting" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1" style="width: 200px;">Đơn vị
                    </th>
                    <th class="sorting" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1" style="width: 100px;">Chức
                      năng
                    </th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @services.each_with_index do |service, idx| %>
                      <tr role="row">
                        <td><%= service.name %></td>
                        <td><%= service.price %></td>
                        <td><%= service.currency %></td>
                        <td class="list-item-action">
                          <a href="/profile/service/<%= service.id %>/edit">
                            <button type="button" class="btn btn-primary m-r-5 m-b-5">Sửa</button>
                          </a>
                        </td>
                      </tr>
                  <% end %>

                  </tbody>
                </table>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-5 list-paginate">
                <%= paginate @services %>
              </div>

            </div>

          </div>
        </div>
      </div>

      <!-- end panel -->
    </div>
    <!-- end col-12 -->
  </div>
  <!-- end row -->
</div>
