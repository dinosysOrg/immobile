<div class="row" >
  <div class="flash " style="position: absolute;
      left: 40%;
      /*margin-left: -50px;*/
      width: 20%;
      height: 100%; ">

    <% flash.each do |key, value| %>
        <div class="fade in text-center alert alert-<%= key %> alert-dismissible"
        >
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <%= value %>
        </div>
    <% end %>

  </div>
</div>