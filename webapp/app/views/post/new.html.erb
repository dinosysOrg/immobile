<div class="content edit-content">
  <div class="panel-heading">
  <h4 class="edit-title">Đăng Tin tức</h4>
  </div>

  <div class="panel-body panel-editor">
    <%= form_tag('/profile/post/', method: 'post', multipart: true) do %>

        <div class="form-horizontal">

          <div class="form-group">
            <label class="col-md-2 control-label">Tiêu đề</label>
            <div class="col-md-8">
              <input id="name" type="text" class="form-control" placeholder="" name="name" data-parsley-required="true" value="">
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-2 control-label">Mô tả ngắn</label>
            <div class="col-md-8">
              <textarea class="form-control" placeholder="" rows="4" name="description"></textarea>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-2 control-label">Nội dung</label>
            <div class="col-md-8">
              <textarea id="content-input" class="form-control" placeholder="" rows="8" name="content"></textarea>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-2 control-label">Danh mục</label>
            <div class="col-md-8">
              <select class="form-control" name="blog_category_id">
                <% blog_categories = BlogCategory::all() %>
                <% blog_categories.each_with_index do |blog_category, idx| %>
                    <option value="<%= blog_category.id %>"><%= blog_category.description %> </option>
                <% end %>
              </select>
            </div>
          </div>

          <hr>

          <div class="form-group">
            <label class="col-md-2 control-label"></label>
            <div class="col-md-8">
              <button type="submit" class="btn btn-sm btn-success">Lưu thông tin</button>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>

<!-- Initialize the editor. -->
<script> $(function() { $('#content-input').froalaEditor() }); </script>